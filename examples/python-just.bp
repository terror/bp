---
filename: justfile
name: project
---
ci: fmt lint test

lint:
  pylint {%name%}

fmt:
  yapf --in-place --recursive --style="{indent_width: 2}" **/*.py

test:
  pytest

run *args:
  python3 {%name%} {{args}}

install *pkg:
  pipenv install {{pkg}} --skip-lock

build:
  python3 setup.py sdist && python3 setup.py build

clean:
  rm -rf dist build {%name%}.egg-info

publish:
  twine upload dist/*

lock:
  pipenv lock --pre

install-editable:
  pipenv install -e .
